<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_info_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/home_titile_backgroud" >

        <ImageView
            android:id="@+id/moive_info_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/movie_info"
            android:src="@drawable/movie_share_button" />

        <ImageView
            android:id="@+id/moive_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/movie_info"
            android:src="@drawable/return_button" />

        <TextView
            android:id="@+id/moive_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/moive_info_share"
            android:layout_centerHorizontal="true"
            android:text="@string/moive_info_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-28dp"
        android:layout_marginTop="-28dp"
        android:contentDescription="@string/movie_info"
        android:src="@drawable/home_title_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/movie_info_ratingbar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" 
            android:gravity="center">
        </LinearLayout>

        <TextView
            android:id="@+id/movie_info_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_info_score"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/movie_info"
                android:src="@drawable/comment_button" />

            <TextView
                android:id="@+id/movie_info_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imageView3"
                android:layout_toRightOf="@id/imageView3"
                android:text="@string/movie_info_comment"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_info"
            android:src="@drawable/movie_info_line" />

        <TextView
            android:id="@+id/movie_info_slect_sence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/movie_info_slect_sence"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_info"
            android:src="@drawable/movie_info_line" />

        <TextView
            android:id="@+id/movie_info_prevue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/movie_info_prevue"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_info"
            android:src="@drawable/movie_info_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/movie_info_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/moive_info_detail"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/moive_info_detail_direct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/moive_info_detail_direct"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/moive_info_detail_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/moive_info_detail_time"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/movie_info"
        android:src="@drawable/movie_info_buttom_line" />

    <Gallery
        android:id="@+id/movie_info_gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/moive_info_gallery_drop"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="5dp" >
    </LinearLayout>

</LinearLayout>