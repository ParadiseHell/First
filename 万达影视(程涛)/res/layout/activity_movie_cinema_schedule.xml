<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/movie_info_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/home_titile_backgroud"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/movie_cinema_schedule_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@drawable/location_button" />

        <Button
            android:id="@+id/movie_cinema_schedule_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@drawable/return_button" />

        <TextView
            android:id="@+id/movie_cinema_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/movie_cinema_schedule_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <Gallery
        android:id="@+id/movie_cinema_schedule_gallery"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ExpandableListView
        android:id="@+id/movie_cinema_schedule_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ExpandableListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <Button
            android:id="@+id/btn_full"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:textSize="12sp"
            android:layout_height="20dp"
            android:textColor="#FFFFFF"            
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
            android:background="#FF0000"
            android:text="@string/btn_full"/>

        <Button
            android:id="@+id/btn_will_full"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/btn_full"
            android:layout_toStartOf="@id/btn_full" 
            android:layout_centerVertical="true"
            android:background="#B46004"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" 
            android:text="@string/btn_will_fill"/>

        <Button
            android:id="@+id/btn_enough"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/btn_will_full"
            android:layout_toStartOf="@id/btn_will_full"
            android:background="#01B10E"
            android:text="@string/btn_enough"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        
    </RelativeLayout>


</LinearLayout>